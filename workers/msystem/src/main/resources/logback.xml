<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <property name="DELA_HOME" value="." />

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>
        %d{yyyy-MM-dd HH:mm:ss} %-5level %logger{136} - %msg%n
      </Pattern>
    </layout>
  </appender>
  
  <appender name="ALL_FILE"
            class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${DELA_HOME}/logs/dela.log</file>
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <Pattern>
        %d{yyyy-MM-dd HH:mm:ss} - %msg%n
      </Pattern>
    </encoder>

    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- rollover daily -->
      <fileNamePattern>${DELA_HOME}/logs/archived/dela.%d{yyyy-MM-dd}.%i.log
      </fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy
        class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>10MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
    </rollingPolicy>

  </appender>

  <logger name="io.netty"                             level="warn" additivity="false"><appender-ref ref="CONSOLE" /></logger>
  <logger name="com.barchart"                         level="warn" additivity="false"><appender-ref ref="CONSOLE" /></logger>
  <logger name="se.sics.kompics.timer"                level="info" additivity="false"><appender-ref ref="CONSOLE" /></logger>
  <logger name="se.sics.kompics.network.netty"        level="info" additivity="false"><appender-ref ref="CONSOLE" /></logger>
  <logger name="se.sics.ktoolbox.netmngr"             level="info" additivity="false"><appender-ref ref="CONSOLE" /></logger>
  <logger name="se.sics.ktoolbox.nutil.conn.workers"  level="debug" additivity="false"><appender-ref ref="CONSOLE" /></logger>
  <logger name="se.sics.dela.workers"                 level="info" additivity="false"><appender-ref ref="CONSOLE" /></logger>
  <root                                               level="trace">                  <appender-ref ref="CONSOLE" /></root>

</configuration>